</br>
<input type="number" id="obj2" value="0.2" ></input></h3>

<button onclick="func()">Сложить</button>

<script>

function func()
{
var obj1 = document.getElementById("obj1");
var obj2 = document.getElementById("obj2");
var num1 = Math.round(Number(obj1.value)*1000000000000);
var num2 = Math.round(Number(obj2.value)*1000000000000);
var sum = (num1+num2)/1000000000000;
alert(sum);
}

